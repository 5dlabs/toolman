{
  "remoteTools": [
    "web_search",
    "web_summarize", 
    "memory_store",
    "memory_retrieve",
    "memory_search",
    "db_query",
    "db_insert"
  ],
  "localServers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem"],
      "tools": ["read_file", "write_file", "list_directory", "create_directory"],
      "workingDirectory": "project_root"
    },
    "git": {
      "command": "npx", 
      "args": ["-y", "@modelcontextprotocol/server-git"],
      "tools": ["git_status", "git_commit", "git_diff", "git_log", "git_add"],
      "workingDirectory": "project_root"
    }
  }
}